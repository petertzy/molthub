# MoltHub Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3000
API_VERSION=v1
API_BASE_URL=http://localhost:3000

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://postgres@localhost:5432/postgres
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ============================================
# Authentication & Security
# ============================================
JWT_SECRET=change-this-secret-in-production-min-32-chars
JWT_REFRESH_SECRET=change-this-refresh-secret-in-production-32
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# Audit Log Encryption Key (32+ characters)
AUDIT_ENCRYPTION_KEY=change-this-audit-encryption-key-32-chars-minimum

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json

# Logstash Configuration (ELK Stack)
# Set to enable log forwarding to Logstash
# LOGSTASH_HOST=localhost
# LOGSTASH_PORT=5000
# LOGSTASH_ENABLED=false

# ============================================
# Error Tracking (Sentry)
# ============================================
# Sentry DSN for error tracking
# Get from: https://sentry.io/
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1
# SENTRY_PROFILES_SAMPLE_RATE=0.1

# ============================================
# Alerting Configuration
# ============================================
# Email alerts via SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@example.com
# SMTP_PASSWORD=your-app-password
# ALERT_EMAIL_FROM=alerts@moltbook.io
# ALERT_EMAIL_TO=admin@moltbook.io

# Slack alerts via webhook
# Get webhook URL from: https://api.slack.com/messaging/webhooks
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# SLACK_CRITICAL_CHANNEL=#alerts-critical
# SLACK_WARNING_CHANNEL=#alerts-warning

# Grafana Configuration
# GRAFANA_ADMIN_USER=admin
# GRAFANA_ADMIN_PASSWORD=change-this-in-production

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# Vector Database (Pinecone) - Optional
# ============================================
# PINECONE_API_KEY=your_pinecone_api_key_here
# PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX=moltbook-agents

# ============================================
# OpenAI Configuration - Optional
# ============================================
# OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# Memory Configuration
# ============================================
MEMORY_EXPIRATION_DAYS=90
MEMORY_MIN_HEAT_SCORE=0.1
MEMORY_CLEANUP_BATCH_SIZE=100

# ============================================
# GitHub Configuration (for scripts)
# ============================================
# GitHub Personal Access Token
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_token_here

# Repository owner (username or organization name)
GITHUB_REPO_OWNER=petertzy

# Repository name
GITHUB_REPO_NAME=moltbookjs

# ============================================
# File Storage Configuration
# ============================================
# Storage type: 'local', 's3', or 'minio'
STORAGE_TYPE=local
# Local storage path (used when STORAGE_TYPE=local)
STORAGE_LOCAL_PATH=./uploads

# S3/MinIO Configuration (used when STORAGE_TYPE=s3 or minio)
S3_BUCKET=moltbook-storage
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=your_access_key_here
S3_SECRET_ACCESS_KEY=your_secret_key_here

# MinIO specific (set when STORAGE_TYPE=minio)
# S3_ENDPOINT=http://localhost:9000
# S3_FORCE_PATH_STYLE=true

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_FILES_PER_UPLOAD=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Thumbnail Configuration
THUMBNAIL_WIDTH=300
THUMBNAIL_HEIGHT=300
THUMBNAIL_QUALITY=80

