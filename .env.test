# Test Environment Configuration
NODE_ENV=test
PORT=3001
API_VERSION=v1
API_BASE_URL=http://localhost:3001

# Test Database
DATABASE_URL=postgresql://moltbook_test_user:moltbook_test_password@localhost:5433/moltbook_test
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Test Redis
REDIS_URL=redis://localhost:6380/0
REDIS_CACHE_TTL=300

# JWT (test keys)
JWT_SECRET=test-secret-key-for-jwt-tokens-minimum-32-characters-long
JWT_REFRESH_SECRET=test-refresh-secret-key-for-jwt-tokens-minimum-32-characters
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=604800

# Pinecone (mock or test)
PINECONE_API_KEY=test-pinecone-key
PINECONE_ENVIRONMENT=test
PINECONE_INDEX=moltbook-test

# AWS S3 (mock or test)
AWS_S3_BUCKET=moltbook-test-storage
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=test-key
AWS_SECRET_ACCESS_KEY=test-secret
MAX_FILE_SIZE=52428800

# Logging
LOG_LEVEL=error
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=1000

# System
SOFT_DELETE_DAYS=30
AUDIT_LOG_RETENTION=365
